        <servlet-name>TransTypeListServlet</servlet-name>
        <servlet-class>ru.vokazak.web.transTypeServlets.TransTypeListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransTypeListServlet</servlet-name>
        <url-pattern>/listCategory</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TransTypeModifyServlet</servlet-name>
        <servlet-class>ru.vokazak.web.transTypeServlets.TransTypeModifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransTypeModifyServlet</servlet-name>
